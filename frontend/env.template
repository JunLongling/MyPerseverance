# FRONTEND DEVELOPMENT CONFIGURATION (frontend/.env.example)
# ------------------------------------------------------------
# To run this project locally, copy this file to 'frontend/.env'.
# This file is read ONLY by the Vite development server (`npm run dev`).

# This URL tells the frontend React app where to find the backend API
# when running in the local Docker Compose environment. It points to the
# backend service's exposed port on the host machine.
VITE_API_URL=http://localhost:8080/api